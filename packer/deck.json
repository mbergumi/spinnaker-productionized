{
  "variables": {
    "service": "deck"
  },
  "builders": [{
    "type": "docker",
    "image": "ubuntu:trusty", 
    "commit": "true"
  }],

"post-processors": [
    [
      {
        "type": "docker-tag",
        "repository": "localhost:5000/deck",
        "tag": "latest"
      },
      "docker-push"
    ]
  ],

  "provisioners": [



    {
      "type": "shell",
    "inline": [
      "export CI=true",
      "export AUTH=disabled",
      "export API_HOST=/gate",
      "sudo apt-get update",
      "sudo apt-get install -y git",
      "sudo apt-get install -y curl",
      "sudo apt-get install -y software-properties-common python-software-properties",
      "sudo apt-get install -y make",
      "sudo apt-get install -y nginx",
      "sudo apt-get install -y build-essential g++",
      "curl -sL https://deb.nodesource.com/setup_6.x | sudo -E bash -",
      "apt-get install -y nodejs",
      "sudo apt-get install -y nodejs",
      "cd ~",
      "git clone https://github.com/spinnaker/deck.git",
      "cd deck",
      "echo '{ \"allow_root\": true }' > /root/deck/.bowerrc",
      "echo '{ \"allow_root\": true }' > /root/.bowerrc",
      "cat /root/.bowerrc",
      "npm install -g bower@1.4.1",
      "npm install",
      "npm run build",
      "sudo rm -rf /usr/share/nginx/html",
      "mv build/webpack /usr/share/nginx/html"
    ],
    "environment_vars": [
      "SERVICE={{user `service`}}"
    ]
  }
  ]

  


}
